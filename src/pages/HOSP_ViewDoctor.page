<apex:page id="HOSP_ViewDoctor" standardController="Doctor__c" extensions="HOSP_ViewDoctorController"
           tabStyle="Doctor__c">
    <apex:form >
        <apex:sectionHeader title="{!$Label.Doctor}" subtitle="{!doctor.Name}" />
        <apex:pageBlock mode="maindetail" title="{!$Label.DoctorDetail}">
            <apex:pageBlockSection columns="2">
                <apex:outputField value="{!doctor.Name}"/>
                <apex:outputField value="{!doctor.Country__c}"/>
                <apex:outputField value="{!doctor.First_Name__c}"/>
                <apex:outputField value="{!doctor.Phone__c}"/>
                <apex:outputField value="{!doctor.Birthdate_Date__c}"/>
                <apex:outputField value="{!doctor.Specialty__c}"/>
                <apex:outputField value="{!doctor.Email__c}"/>
                <apex:outputField value="{!doctor.Licence_Number__c}"/>
            </apex:pageBlockSection>
            <apex:pageBlockButtons >
                <apex:commandButton value="{!$Label.Edit}" action="{!edit}"/>
                <apex:commandButton value="{!$Label.Delete}" action="{!delete}"/>
                <apex:commandButton value="{!$Label.Clone}" action="{!URLFOR($Action.Doctor__c.Clone,Doctor__c.Id)}"/>
            </apex:pageBlockButtons>
        </apex:pageBlock>
    </apex:form>
    <apex:relatedList list="Contracts__r"/>
</apex:page>